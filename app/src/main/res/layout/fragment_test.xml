<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="github.hellocsl.gallerylayoutmanager.MainActivity">

    <include layout="@layout/app_toolbar"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="16dip"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycle1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/main_tv_recycle_info_1"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            tools:text="Hello World"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycle2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/main_tv_recycle_info_2"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            tools:text="Hello World"/>

        <TextView
            android:id="@+id/main_tv_recycle_info_3"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            tools:text="Hello World"/>
    </FrameLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button
            android:id="@+id/main_btn_random"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip" android:layout_weight="1"
            android:text="Random Select"/>

        <Button
            android:id="@+id/main_btn_data_change"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip" android:layout_weight="1"
            android:text="Data Change"/>
    </LinearLayout>
</LinearLayout>
